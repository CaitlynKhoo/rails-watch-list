
<div class="container">
  <h1 class= "mt-4 mb-4"><%= @list.name%></h1>
  <div class="cards mb-4">
    <div class="card-movie">
      <% @list.bookmarks.each do |bookmark| %>
        <%= image_tag bookmark.movie.poster_url %>
        <%= link_to bookmark_path(params:{bookmark_id:bookmark}), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash" style="color: #ffffff;"></i>
        <% end %>
        <div class="card-movie-infos">
          <div>
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <p class="card-movie-rating"><%= bookmark.movie.rating %><i class="fa-solid fa-star" style="color: #f5ed00;"></i></p>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Create bookmark", new_list_bookmark_path(@list), class: "text-decoration-none btn btn-primary mt-2 " %>
</div>

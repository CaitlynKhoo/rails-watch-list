<div class="container">
<h1><%= @list.name%></h1>
  <div>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %></li>
      <%= link_to '🗑️', bookmark_path(params:{bookmark_id:bookmark}), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <% end %>
  </ul>
  <%= link_to "Create bookmark", new_list_bookmark_path(@list), class: "text-decoration-none btn btn-primary mt-2 " %>
  </div>
</div>
